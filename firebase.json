{
  "hosting": {
    "public": "client/build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/create",
        "function": "api"
      },
      {
        "source": "/validate",
        "function": "api"
      }    
    ]
  }
}
